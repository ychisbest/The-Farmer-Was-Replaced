---
import { SITE_TITLE } from "@/consts";
import { useTranslations, type Lang } from "@/i18n";
import { DEFAULT_LOCALE_SETTING,LOCALES_SETTING } from "@/locales";
import { getRelativeLocaleUrl } from "astro:i18n";
const locale = Astro.currentLocale || DEFAULT_LOCALE_SETTING;
const t = useTranslations(Astro.currentLocale as Lang);
const today = new Date();
const path = Astro.url.pathname.replace(/^\/[a-z]{2}(?:-[A-Z]{2})?\//, "/");
---

<footer class="bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-t border-slate-200/50 dark:border-slate-700/50 transition-colors">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
                <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                        <div class="flex items-center space-x-3 mb-4 md:mb-0">

                                <h3 class="text-lg font-bold text-slate-900 dark:text-white tracking-tight"></h3>
                        </div>
                        <ul class="flex flex-wrap gap-6 text-slate-700 dark:text-slate-300 text-sm font-medium">
                                <li>
                                        <a href="/privacy/" class="hover:text-slate-900 dark:hover:text-white transition-colors duration-200">
                                                {t({
                                                        en: "Privacy Policy",
                                                        it: "Informativa sulla privacy",
                                                        de: "Datenschutzrichtlinie"
                                                })}
                                        </a>
                                </li>
                                <li>
                                        <a href="/terms/" class="hover:text-slate-900 dark:hover:text-white transition-colors duration-200">
                                                {t({
                                                        en: "Terms of Service",
                                                        it: "Termini di servizio",
                                                        de: "Nutzungsbedingungen"
                                                })}
                                        </a>
                                </li>

                        </ul>
                        <ul>
                                                                <li class="relative">
                                        <ul class="inline-flex gap-2">
                                                {Object.keys(LOCALES_SETTING).map(l => (
                                                        <li>
                                                                <a
                                                                        href={getRelativeLocaleUrl(l, path || "/")}
                                                                        class={`px-2 py-1 rounded text-sm transition-colors duration-200 ${
                                                                                locale === l
                                                                                        ? "bg-slate-200 dark:bg-slate-700 text-slate-900 dark:text-white font-medium"
                                                                                        : "text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white"
                                                                        }`}
                                                                        aria-current={locale === l ? "page" : undefined}
                                                                >
                                                                        {LOCALES_SETTING[l as keyof typeof LOCALES_SETTING].label}
                                                                </a>
                                                        </li>
                                                ))}
                                        </ul>
                                </li>
                        </ul>
                </div>

        </div>
</footer>
